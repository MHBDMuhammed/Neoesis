  fi
  echo -e "  ${RED}‚Üí${NC} Use logical properties instead:"
  echo -e "     pl-4 ‚Üí ps-4 (padding-inline-start)"
  echo -e "     pr-4 ‚Üí pe-4 (padding-inline-end)"
  echo -e "     ml-4 ‚Üí ms-4 (margin-inline-start)"
  echo -e "     mr-4 ‚Üí me-4 (margin-inline-end)"
  echo -e "     border-l ‚Üí border-s (border-inline-start)"
