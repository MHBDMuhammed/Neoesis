  CHECKS_PASSED=$((CHECKS_PASSED + 1))
fi
echo ""

# Check 4: Verify @theme usage in CSS files
echo -e "${YELLOW}[4/4]${NC} Checking for @theme directive in CSS..."
if grep -q "@theme" src/app/globals.css 2>/dev/null; then
