 */
function generateLessonFile(lesson: LessonAnswers, quiz?: QuizAnswers): string {
  const quizSection = quiz ? `
  quiz: {
    id: 'quiz-${lesson.slug}',
    prompt: '${quiz.prompt}',
    type: 'single-choice',
    options: ${JSON.stringify(quiz.options, null, 6)},
