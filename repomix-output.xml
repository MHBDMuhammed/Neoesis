echo ""

# Check 1: No tailwind.config.js (Tailwind v4 uses @theme in CSS)
echo -e "${YELLOW}[1/4]${NC} Checking for legacy tailwind.config.js..."
if [ -f "tailwind.config.js" ] || [ -f "tailwind.config.ts" ]; then
  echo -e "${RED}‚úó FAIL:${NC} Found tailwind.config.js/ts (Tailwind v4 violation)"
  echo -e "  ${RED}‚Üí${NC} Tailwind v4 uses @theme directive in CSS files"
